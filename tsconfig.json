{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["./src/**/**/*.ts"],
  "exclude": ["node_modules"]
}
