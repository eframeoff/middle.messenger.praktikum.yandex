<div class="container">
    <button onclick="document.location='./profile'" class="returnToChat" type="button" ><img src="{{arrow}}" alt="Назад"></button>
    <div class="profile_edit">
  <div class="profile_edit__main">
    <a href="{{image}}" class="profile_edit__main__logo">
      <img src="{{image}}" alt="Photo profile" />
          </a>
      <input type="text" name="display_name" value="{{display_name}}"/>
    <button onclick="document.location='./profile'">Сохранить</button>
  </div>
  <div class="profile_edit__information">
    <ul>
      <li>
        <label for="name">Имя</label>
        <input type="text" name="first_name" value="{{first_name}}"/>
      </li>
      <li>
        <label for="name">Фамилия</label>
        <input type="text" name="second_name" value="{{second_name}}"/>
      </li>
      <li>
        <label for="name">Логин</label>
        <input type="text" name="login" value="{{login}}"/>
      </li>
      <li>
        <label for="name">Маил</label>
        <input type="email" name="email" value="{{email}}"/>
      </li>
      <li>
        <label for="name">Телефон</label>
        <input type="number" name="phone" value="{{phone}}"/>
      </li>
      <li>
        <label for="name">Старый пароль</label>
        <input type="password" name="oldPassword" value="{{password}}"/>
      </li>
      <li>
        <label for="name">Новый пароль</label>
        <input type="password" name="newPassword" value=""/>
      </li>
    </ul>
    </div>
  </div>
</div>